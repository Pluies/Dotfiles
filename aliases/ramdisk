ALFRESCO_VERSION=4.2.d
ALFRESCO_PROJECT=placeholder

alias ramdisk-alfresco-create='sudo mount -t tmpfs -o size=3072M tmpfs /ramdisk/ && cp -R /opt/alfresco-$ALFRESCO_VERSION-for-ramdisk/alfresco-$ALFRESCO_VERSION /ramdisk/'
alias ramdisk-alfresco-start='(cd /ramdisk/alfresco*/ && ./alfresco.sh start && tail -f /ramdisk/alfresco*/alfresco.log)'
alias ramdisk-alfresco-restart='(cd /ramdisk/alfresco*/ && ./alfresco.sh restart && tail -f /ramdisk/alfresco*/alfresco.log)'
alias ramdisk-alfresco-stop='(cd /ramdisk/alfresco*/ && ./alfresco.sh stop)'
alias ramdisk-alfresco-delete='sudo umount /ramdisk'

alias ramdisk-alfresco-make-symlinks='(cd /ramdisk/alfresco*/tomcat/webapps && rm -Rf alfresco share alfresco.war share.war && ln -s /home/florent/maven3/$ALFRESCO_PROJECT/share/target/share && ln -s /home/florent/maven3/$ALFRESCO_PROJECT/alfresco/target/alfresco)'

alias ramdisk-alfresco-copy-wars='(cd /ramdisk/alfresco*/tomcat/webapps && rm -Rf alfresco share alfresco.war share.war && cp /home/florent/maven3/$ALFRESCO_PROJECT/share/target/share.war . && cp /home/florent/maven3/$ALFRESCO_PROJECT/alfresco/target/alfresco.war .)'

alias ramdisk-alfresco-regenerate='sudo echo "Regenerating..." && ramdisk-alfresco-stop && ramdisk-alfresco-delete && ramdisk-alfresco-create && ramdisk-alfresco-start'
